/* pages/tabOne/search_page.wxss */
page{
  background-color: #EDECE8;
}
.banner3{
  width: 100%;
  height: 200rpx;
  margin-bottom: 76rpx;
}
.imgbanner{
  width: 100%;
  height: 200rpx;
  background-color: #fff;
}
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.userinfo{
    
    height: 200rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
}

.userinfo-avatar {
    width: 150rpx;
    height: 150rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 40rpx;
    color: #000;
}
.oexit_show{
  display: block;
  width: 180rpx;
  height: 80rpx;
  border-radius: 12rpx;
  border: 1rpx solid #000;
  text-align: center;
  line-height: 80rpx;
  color: #000;
}
.oexit_hide{
  display: none;
}
.want_publish_list{
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx auto;
  color: #000;
  background-color: #fff;
}
.myicon{
  width: 80rpx;
  height: 80rpx;
  float: left;
  margin: 0rpx 20rpx;
  padding: 10rpx;
}