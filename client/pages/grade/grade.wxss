/* pages/grade/grade.wxss */
page{
  background-color: #EDECE8;
}
.table {    
  width: 100%;  
  margin-top: 20rpx;  
}  
.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height: 3rem;  
  align-items: center;  
}  
.td {  
    width:20%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;  
}  
.td-1 {  
    width:19%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;
    align-items: center;  
}  
.td-2 {  
    width:80%;  
    justify-content: center;  
    border-right: 2px solid #ddd;  
    text-align: left;  
    height: 100%;  
    max-width: 100%;  
    padding: 40rpx 0;  
}  
.bg-w{  
  background: #afb4db;  
  
}  
.bg-g{  
  background: #E6F3F9;  
}  
.bg-g2{  
  background: #fff;  
}  
.th {  
  width: 19%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  border-right: 2px solid #ddd;  
}  
.th-2 {  
  width: 80%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 80%;  
}.th-text {  
  width: 80%;  
  justify-content: center;  
  color: #000;  
  display: block;  
  height: 3rem;  
  max-height:  3rem;  
  max-width: 80%;  
  text-align: center;
  line-height:3rem;  
} 
.mydengji{
  width: 100%;
  height: 200rpx;
  padding-top: 20rpx;
  background-color: #EDECE8;
}
.chenghao,.jifen{
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  background-color: #fff;
  line-height: 80rpx;
}
.chenghao{
  margin-bottom: 20rpx;
}
.shuoming{
  padding: 20rpx;
}